
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Les utilisateurs peuvent lire le profil de n'importe qui, mais ne peuvent écrire que sur le leur.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // N'importe qui peut lire les installations pour la carte.
    // Seuls les utilisateurs authentifiés peuvent créer/modifier/supprimer.
    match /facilities/{facilityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Les utilisateurs authentifiés peuvent lire les demandes s'ils filtrent par statut
    // ou s'ils lisent leur propre demande. Ils peuvent aussi créer des demandes.
    match /facilityRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}

    