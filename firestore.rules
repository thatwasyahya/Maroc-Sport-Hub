
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Temporarily allow reads and writes to all documents to unblock development.
      // WARNING: This is insecure and should be replaced with proper rules.
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
