/**
 * @description This ruleset enforces a role-based access control model for the Maroc Sport Hub application.
 * It provides granular permissions for different user roles (super_admin, admin, user) across various data collections.
 * The core security principle is using Firebase Auth Custom Claims for role checking.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**************************************************
     * Helper Functions
     **************************************************/

    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return request.auth.token.role == 'super_admin';
    }
    
    function isAdmin() {
      return request.auth.token.role == 'admin' || isSuperAdmin();
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**************************************************
     * Collection: users
     * Description: Stores public user profile data.
     **************************************************/
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSuperAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
    /**************************************************
     * Collection: facilities
     * Description: Manages sports facility data.
     **************************************************/
    match /facilities/{facilityId} {
      allow read: if true; // Publicly readable
      allow create: if isAdmin();
      // Only the facility admin or a super_admin can update/delete
      allow update, delete: if (isAdmin() && resource.data.adminId == request.auth.uid) || isSuperAdmin();
    }
    
    /**************************************************
     * Collection: equipments
     * Description: Manages sports equipment data.
     **************************************************/
    match /equipments/{equipmentId} {
      allow read: if true; // Publicly readable
      allow create, update, delete: if isAdmin();
    }
    
    /**************************************************
     * Collection: facilityRequests
     * Description: Manages user requests to add new facilities.
     **************************************************/
    match /facilityRequests/{requestId} {
      // An admin can get any request. A user can get their own request.
      allow get: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Admins can list all requests. Users can list their own requests via a constrained query.
      allow list: if isAdmin() || (request.query.where.size() == 1 && request.query.where[0].field == 'userId' && request.query.where[0].value == request.auth.uid);
      
      // Any signed-in user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only admins can update (approve/reject) a request.
      allow update: if isAdmin();

      // Users cannot delete requests. Admins can.
      allow delete: if isAdmin();
    }
  }
}
