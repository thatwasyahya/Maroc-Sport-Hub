
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Les utilisateurs peuvent lire le profil de n'importe qui, mais ne peuvent écrire que sur le leur.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // N'importe qui peut lire les installations pour la carte.
    // Seuls les utilisateurs authentifiés peuvent créer/modifier/supprimer.
    match /facilities/{facilityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Les utilisateurs authentifiés peuvent lire et écrire sur la collection des demandes.
    // Cela permet aux administrateurs de lister toutes les demandes et aux utilisateurs
    // de créer et de voir leurs propres demandes. Les règles seront affinées plus tard.
    match /facilityRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}
