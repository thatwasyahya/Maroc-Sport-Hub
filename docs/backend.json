{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user." },
        "email": { "type": "string", "description": "Email address of the user.", "format": "email" },
        "role": { "type": "string", "description": "Role of the user (e.g., super_admin, admin, user)." },
        "firstName": { "type": "string", "description": "First name of the user." },
        "lastName": { "type": "string", "description": "Last name of the user." },
        "phoneNumber": { "type": "string", "description": "Phone number of the user." },
        "gender": { "type": "string", "enum": ["Male", "Female"], "description": "Gender of the user." },
        "birthDate": { "type": "string", "format": "date", "description": "Birth date of the user." },
        "jobTitle": { "type": "string", "description": "The user's job title or function." },
        "city": { "type": "string", "description": "The user's city of residence." },
        "favoriteSports": { "type": "array", "items": { "type": "string" }, "description": "List of the user's favorite sports." },
        "createdAt": { "type": "string", "description": "Timestamp indicating when the user was created.", "format": "date-time" },
        "updatedAt": { "type": "string", "description": "Timestamp indicating when the user was last updated.", "format": "date-time" }
      },
      "required": ["id", "email", "role"]
    },
    "EquipmentItem": {
      "title": "EquipmentItem",
      "type": "object",
      "description": "Represents a piece of equipment with its quantity.",
      "properties": {
        "name": { "type": "string" },
        "quantity": { "type": "string", "description": "Quantity of the equipment, can be a number or 'X'." }
      },
      "required": ["name", "quantity"]
    },
    "Facility": {
      "title": "Facility",
      "type": "object",
      "description": "Represents a sports facility.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the facility." },
        "name": { "type": "string", "description": "Name of the facility." },
        "description": { "type": "string", "description": "Description of the facility." },
        "sports": { "type": "array", "items": { "type": "string" }, "description": "List of sports supported by the facility." },
        "address": { "type": "string", "description": "Address of the facility." },
        "adminId": { "type": "string", "description": "Reference to the Admin user who manages this facility." },
        "equipments": { 
          "type": "array", 
          "items": { "$ref": "#/entities/EquipmentItem" }, 
          "description": "List of equipment available at the facility." 
        },
        "location": {
            "type": "object",
            "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" }
            }
        },
        "reference_region": { "type": "string" },
        "province": { "type": "string" },
        "commune": { "type": "string" },
        "milieu": { "type": "string", "enum": ["Urbain", "Rural"] },
        "category": { "type": "string" },
        "ownership": { "type": "string" },
        "managing_entity": { "type": "string" },
        "last_renovation_date": { "type": "string", "format": "date" },
        "surface_area": { "type": "number" },
        "capacity": { "type": "number" },
        "staff_count": { "type": "number" },
        "establishment_state": { "type": "string", "enum": ["Opérationnel", "En arrêt", "Prêt", "En cours de transformation", "En cours de construction", "Non défini"] },
        "developed_space": { "type": "string" },
        "building_state": { "type": "string", "enum": ["Bon", "Moyen", "Mauvais", "Médiocre", "Non défini"] },
        "equipment_state": { "type": "string", "enum": ["Non équipé", "Bon", "Moyen", "Mauvais", "Médiocre", "Non défini"] },
        "sports_staff_count": { "type": "number" },
        "hr_needs": { "type": "string" },
        "rehabilitation_plan": { "type": "string" },
        "development_basin": { "type": "string" },
        "equipment_basin": { "type": "string" },
        "beneficiaries": { "type": "string" },
        "observations": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "FacilityRequest": {
      "title": "FacilityRequest",
      "description": "Represents a user's request to add a new facility.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who submitted the request." },
        "userName": { "type": "string", "description": "The name of the user who submitted the request." },
        "userEmail": { "type": "string", "description": "The email of the user who submitted the request." },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"], "description": "The current status of the request." },
        "rejectionReason": { "type": "string", "description": "Reason for rejection, if applicable." },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "address": { "type": "string" },
        "region": { "type": "string" },
        "city": { "type": "string" },
        "sports": { "type": "array", "items": { "type": "string" } },
        "equipments": { 
          "type": "array", 
          "items": { "$ref": "#/entities/EquipmentItem" } 
        },
        "type": { "type": "string", "enum": ["indoor", "outdoor"] },
        "accessible": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "location": {
            "type": "object",
            "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" }
            }
        },
        "reference_region": { "type": "string" },
        "province": { "type": "string" },
        "commune": { "type": "string" },
        "milieu": { "type": "string", "enum": ["Urbain", "Rural"] },
        "category": { "type": "string" },
        "ownership": { "type": "string" },
        "managing_entity": { "type": "string" },
        "last_renovation_date": { "type": "string", "format": "date" },
        "surface_area": { "type": "number" },
        "capacity": { "type": "number" },
        "staff_count": { "type": "number" },
        "establishment_state": { "type": "string", "enum": ["Opérationnel", "En arrêt", "Prêt", "En cours de transformation", "En cours de construction", "Non défini"] },
        "developed_space": { "type": "string" },
        "building_state": { "type": "string", "enum": ["Bon", "Moyen", "Mauvais", "Médiocre", "Non défini"] },
        "equipment_state": { "type": "string", "enum": ["Non équipé", "Bon", "Moyen", "Mauvais", "Médiocre", "Non défini"] },
        "sports_staff_count": { "type": "number" },
        "hr_needs": { "type": "string" },
        "rehabilitation_plan": { "type": "string" },
        "development_basin": { "type": "string" },
        "equipment_basin": { "type": "string" },
        "beneficiaries": { "type": "string" },
        "observations": { "type": "string" }
      },
      "required": ["userId", "userName", "userEmail", "status", "name", "region", "city", "sports", "type", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profile data."
        }
      },
      {
        "path": "/facilities/{facilityId}",
        "definition": {
          "schema": { "$ref": "#/entities/Facility" },
          "description": "Stores sports facility data. Includes denormalized 'adminId' for authorization independence."
        }
      },
      {
        "path": "/facilityRequests/{requestId}",
        "definition": {
          "schema": { "$ref": "#/entities/FacilityRequest" },
          "description": "Stores user submissions for new facilities. Awaits admin approval."
        }
      }
    ]
  }
}
